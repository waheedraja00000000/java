package javaapplication25;

import java.util.Arrays;
import java.util.Scanner;


public class JavaApplication25 {

    
    public static void main(String[] args) {
      Scanner s = new Scanner(System.in);
     System.out. println("Enter Name");
     String name = s.next();

     System.out. println("Enter Roll num");
     int Rolnum = s.nextInt();
     
    System.out.println("Enter number  of subject");
      
      int size = s.nextInt();
      int sub[] = new int [size];
      int sum = 0;
      System.out.println("Enter the subject marks one by one ");

      for(int i=0; i<size; i++){
         sub[i] = s.nextInt();
         sum = sum + sub[i];
      }
      System.out.println("your name is ::"+name);
      
      System.out.println("your role num is ::"+Rolnum);
      
      System.out.println("entered  subjects Marks: "+Arrays.toString(sub));
      System.out.println("Sum of the totall subjects Entered ::"+sum);
    }
    
}
